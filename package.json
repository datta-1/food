{
  "name": "foodflyers",
  "version": "1.0.0",
  "description": "FoodFlyers - Restaurant Food Ordering Platform",
  "main": "index.js",
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd admin && npm run build",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../admin && npm install",
    "deploy:backend": "cd backend && vercel --prod",
    "deploy:frontend": "cd frontend && vercel --prod",
    "deploy:admin": "cd admin && vercel --prod"
  },
  "keywords": [
    "restaurant",
    "food-ordering",
    "mern-stack",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "FoodFlyers Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}